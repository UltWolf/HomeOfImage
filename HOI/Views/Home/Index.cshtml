                </div>
            </form><div class="gcse-searchbox"></div>
        </div>
        <div class="col-sm">
            <h1>Or u can just input image by ctrl+v  to this field</h1>
        </div>
        <div class="col-sm">

        </div>
        </div>
        </div>
    </div> 
<div class="gcse-searchresults" enableImageSearch="true" ></div>
 <div class="ImagePushing">
     <img src="" id="originalImage"/>
 </div>

<script type="text/javascript">
  document.onpaste = function (event) { 
  var items = (event.clipboardData  || event.originalEvent.clipboardData).items;
  console.log(JSON.stringify(items)); 
  var blob = null;
  for (var i = 0; i < items.length; i++) {
    if (items[i].type.indexOf("image") === 0) {
        blob = items[i].getAsFile();
        console.log(blob);
    }
  } 
  if (blob !== null) {
    var reader = new FileReader();
      reader.onload = function (event) { 
          var image = document.getElementById("originalImage");
          image.setAttribute("src",  event.target.result);
      };
      reader.readAsDataURL(blob); 
     
  }
}
</script>